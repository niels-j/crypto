<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD4EC"
    android:columnCount="1"
    android:rowCount="5"
    android:useDefaultMargins="true"
    tools:context="nielsj.crypto.Crypto">

    <TextView
        android:id="@+id/welcomeTextView"
        android:text="Welcome"
        android:layout_row="0"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="#42ADF5"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"></TextView>

    <TextView
        android:id="@+id/guideTextView"
        android:text="Please select a cryptographic mechanism"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"></TextView>

    <Button
        android:id="@+id/symmetricEncryptionButton"
        android:text="Symmetric encryption"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="15sp"></Button>

    <Button
        android:id="@+id/hashingButton"
        android:text="Hashing"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="15sp"></Button>

    <Button
        android:id="@+id/asymmetricEncryptionButton"
        android:text="Asymmetric encryption"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="15sp"></Button>

</GridLayout>
