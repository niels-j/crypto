<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD4EC"
    android:columnCount="2"
    android:rowCount="8"
    android:useDefaultMargins="true"
    tools:context="nielsj.crypto.control.SymmetricEncryptionControl">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="#42ADF5"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"></TextView>

    <TextView
        android:id="@+id/guideTextView"
        android:text="Please type\nplaintext" 
        android:textColor="#000000"
        android:layout_row="1"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"></TextView>

    <EditText
        android:id="@+id/plaintextEditText"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/keyTextView"
        android:text="Key"
        android:textColor="#000000"
        android:layout_row="2"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"></TextView>

    <EditText
        android:id="@+id/keyEditText"
        android:layout_row="2"
        android:layout_column="1"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/keyTextView"
        android:text="IV"
        android:textColor="#000000"
        android:layout_row="3"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"></TextView>

    <EditText
        android:id="@+id/ivEditText"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:inputType="text"></EditText>



    <Button
        android:id="@+id/encryptButton"
        android:text="Encrypt"
        android:layout_row="4"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"></Button>

    <EditText
        android:id="@+id/encryptedEditText"
        android:layout_row="4"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:typeface="monospace"
        android:inputType="textMultiLine"></EditText>

    <Button
        android:id="@+id/decryptButton"
        android:text="Decrypt"
        android:layout_row="5"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"></Button>

    <TextView
        android:id="@+id/decryptedTextView"
        android:layout_row="5"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textMultiLine">
    </TextView>

</GridLayout>