<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD4EC"
    android:columnCount="2"
    android:rowCount="3"
    android:shrinkColumns="true"
    android:useDefaultMargins="true"
    tools:context="nielsj.crypto.control.HashingControl">

    <TextView
        android:id="@+id/welcomeTextView"
        android:text="Hashing (SHA 256)"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="#42ADF5"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FFFFFF"></TextView>

    <TextView
        android:id="@+id/guideTextView"
        android:text="Please type \ninput text:"
        android:layout_row="1"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"></TextView>

    <EditText
        android:id="@+id/inputEditText"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:inputType="text"></EditText>

    <Button
        android:id="@+id/hashButton"
        android:layout_row="2"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Hash"></Button>

    <TextView
        android:id="@+id/hashvalueTextView"
        android:layout_row="2"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:typeface="monospace"
        android:inputType="textMultiLine"></TextView>



</GridLayout>
